pipeline {
    agent any

    stages {
        stage('Build') {
            steps {
                sh 'sleep 5'
            }
        }

        stage('Test') {
            steps {
                sh '''
                    #!/bin/bash
                    ls -lrt
                    sleep 5
                 '''   

            }

        }
        stage('Trigger Mavenfile Job') {
            steps {
                build job: 'MyMavenFileJob', wait: true
                echo 'Mavenfile job triggered successfully!'
            }
        }
    }   
}
    